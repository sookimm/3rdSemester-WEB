<div class="row">
  <div class="col-md-12">
    <h2>Log In</h2>
    <hr />
    {{#if errorMessage}}
      <div class="alert alert-danger">
        <strong>Error:</strong>
        {{errorMessage}}
      </div>
    {{/if}}
    <form method="post" action="/login">
      <div class="row">
        <div class="col-md-12">
          <div class="form-group">
            <input
              type="text"
              class="form-control"
              id="userName"
              name="userName"
              placeholder="User Name"
              required
              value={{userName}}
            />
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <div class="form-group">
            <input
              type="password"
              class="form-control"
              id="password"
              name="password"
              placeholder="Password"
              required
            />
          </div>
        </div>
      </div>
      <input type="submit" class="btn btn-success pull-right" value="Login" />
    </form>
  </div>
</div>